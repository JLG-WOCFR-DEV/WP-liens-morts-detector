{
    "require-dev": {
        "phpunit/phpunit": "^9",
        "brain/monkey": "^2.6"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:php": [
            "@php -r \"if (!is_dir('build')) { mkdir('build'); }\"",
            "@php -r \"if (!is_dir('build/logs')) { mkdir('build/logs'); }\"",
            "vendor/bin/phpunit"
        ],
        "test:js": "npm test",
        "test:all": [
            "@test:php",
            "@test:js",
            "npm run test:e2e"
        ]
    },
    "autoload": {
        "psr-4": {
            "JLG\\BrokenLinks\\": "liens-morts-detector-jlg/includes/"
        }
    }
}
